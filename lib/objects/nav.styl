/**
 * Nav object
 *
 * E.g.:
 *
 *    <ul class="nav [nav[--[stacked|fit]]">
 *        <li class="nav__item"><a href=""></a></li>
 *        <li  class="nav__item"><a href=""></a></li>
 *    </ul>
 */

.nav {
  white-space: nowrap;
  &__item {
    &, > a {
      display: inline-block;
    }
    &--title {
      font-weight: 700;
    }
  }
}

if ie7 {
  .is-ie7 .nav {
    &__item {
      &, > a {
        display: inline;
        zoom: 1;
      }
    }
  }
}

.nav--stacked {
  .nav__item {
    display: list-item;
    > a {
      display: block;
    }
  }
}

.nav--fit {
  display: table;
  width: 100%;
  .nav__item {
    display: table-cell;
    > a {
      display: block;
    }
  }
}

