/**
 * Grid object
 */

.l-grid {
  display: block;
  clear: both;
  clr();
  &__item {
    float: left;
    width: 100%;
    padding: (grid-gutter-height / 2) (grid-gutter-width / 2);

    &:first-child {
      padding-left: grid-gutter-width;
    }
    &:last-child {
      padding-right: grid-gutter-width;
    }

    & &:first-child {
      padding-left: 0;
    }
    & &:last-child {
      padding-right: 0;
    }
    & .l-grid > & {
      padding-bottom: 0;
    }
  }
}

.l-grid--nogut > .l-grid__item,
.l-grid__item--nogut {
  padding: 0 !important;
}
